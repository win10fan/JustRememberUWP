<ContentDialog 
    x:Class="JustRemember.Views.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="460"
    d:DesignWidth="480"
	PrimaryButtonText="OK">
	<ContentDialog.Title>
		<StackPanel Orientation="Horizontal">
			<Image Source="ms-appx:///Assets/Store/StoreLogo.png" Width="40" Height="40" Margin="0"/>
			<TextBlock Margin="10,5,0,0">
					<Run Text="What's new in this version" x:Uid="AfterUpdate_Title"/>
			</TextBlock>
		</StackPanel>
	</ContentDialog.Title>
	<ScrollViewer>
		<StackPanel Orientation="Vertical">
			<TextBlock Margin="0,0,0,5" x:Uid="AfterUpdate_1_2" TextWrapping="WrapWholeWords"/>
			<TextBlock Margin="0,5" x:Uid="AfterUpdate_1_1" TextWrapping="WrapWholeWords"/>
		</StackPanel>
	</ScrollViewer>
</ContentDialog>
